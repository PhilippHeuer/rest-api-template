root = true

# Global
[*]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Documentation: MD
[*.md]
trim_trailing_whitespace = false

# Configuration: YAML
[{*.yml, *.yaml, Jenkinsfile}]
indent_style = space
indent_size = 2

# Language: Java
[*.java]
indent_style = space
indent_size = 4
